
<launch>

    <!-- bag的地址与名称 -->
    <arg name="bag_filename" default="/home/lx/bagfiles/slam/lesson1.bag"/>

    <!-- 使用bag的时间戳 -->
    <param name="use_sim_time" value="true" />

    <!-- base_link to front_laser_link -->
    <node pkg="tf2_ros" type="static_transform_publisher" name="link_broadcaster" 
        args="0 0 0.254 0 0 3.1415926 base_link front_laser_link" />
    <node pkg="tf2_ros" type="static_transform_publisher" name="link_broadcaster1" 
        args="0 0 0 0 0 0 footprint base_link" />

    <!-- 启动 karto_slam 节点 -->
    <node name="lesson6_karto_slam_node" pkg="lesson6" type="lesson6_karto_slam_node" output="screen" >
        <rosparam command="load" file="$(find lesson6)/config/mapper_params.yaml" />
        <remap from="scan" to="laser_scan" />
    </node>

    <!-- launch rviz -->
    <node name="rviz" pkg="rviz" type="rviz" required="true"
        args="-d $(find lesson6)/config/karto_slam.rviz" />

    <!-- play bagfile -->
    <node name="playbag" pkg="rosbag" type="play"
        args="--clock $(arg bag_filename) -r 1" />

</launch>